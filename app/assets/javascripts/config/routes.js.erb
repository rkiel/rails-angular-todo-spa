(function() {
  'use strict';

  angular
  .module('application')
  .config(routes);

  routes.$inject = ['$routeProvider', '$locationProvider'];

  function routes($routeProvider, $locationProvider) {

    $routeProvider

    .when('/todo', {
      templateUrl:      '<%= asset_path("todo/todo.html") %>',
      controller:       'TodoController',
      controllerAs:     'vm',
      bindToController: true
    })

    .when('/logout', {
      templateUrl:      '<%= asset_path("home/logout.html") %>',
      controller:       'LogoutController',
      controllerAs:     'vm',
      bindToController: true
    })

    .when('/login', {
      templateUrl:      '<%= asset_path("home/login.html") %>',
      controller:       'LoginController',
      controllerAs:     'vm',
      bindToController: true
    })

    .when('/signup', {
      templateUrl:      '<%= asset_path("home/signup.html") %>',
      controller:       'SignupController',
      controllerAs:     'vm',
      bindToController: true
    })

    .when('/', {
      templateUrl:      '<%= asset_path("home/index.html") %>',
      controller:       'HomeController',
      controllerAs:     'vm',
      bindToController: true
    })

    .otherwise({redirectTo: '/'});


    $locationProvider.html5Mode(true);
  }

})();
